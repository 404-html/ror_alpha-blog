<% if @article.errors.any? %>
	<h3>The following errors occurred when trying to <%= message %> the article:</h3>
	<ul>
		<% @article.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %>
		<br/>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %>
		<br/>
		<%= f.text_area :description %>
	</p>
	<%= f.submit %>
<% end %>

<p><%= link_to "Return to Article Listing", articles_path %></p>